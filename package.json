{
    "name": "acorn",
    "displayName": "Acorn",
    "description": "Plugin for working with Acornfiles and Acorn apps.",
    "publisher": "Acorn-Labs",
    "version": "0.2.1",
    "icon": "images/logo.png",
    "categories": [
        "Programming Languages",
        "Other",
        "Snippets"
    ],
    "keywords": [
        "containers",
        "Kubernetes",
        "aml"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/acorn-io/vscode-acorn"
    },
    "main": "src/main.js",
    "activationEvents": [
        "onLanguage:aml",
        "onCommand:acorn.commands.runInteractive",
        "onCommand:acorn.commands.run",
        "onCommand:acorn.commands.build",
        "onCommand:acorn.commands.login",
        "onCommand:acorn.commands.logout",
        "onView:acornApps",
        "onView:acornProjects"
    ],
    "engines": {
        "vscode": "^1.69.0"
    },
    "contributes": {
        "configuration": {
            "title": "Acorn",
            "properties": {
                "acorn.acornPath": {
                    "type": "string",
                    "default": "acorn",
                    "description": "Absolute path to Acorn client executable (`acorn` command)",
                    "scope": "machine-overridable"
                }
            }
        },
        "commands": [
            {
                "command": "acorn.commands.runInteractive",
                "title": "Run Interactive",
                "category": "Acorn"
            },
            {
                "command": "acorn.commands.run",
                "title": "Run Image",
                "category": "Acorn"
            },
            {
                "command": "acorn.commands.build",
                "title": "Build Image",
                "category": "Acorn"
            },
            {
                "command": "acorn.commands.login",
                "title": "Login",
                "category": "Acorn"
            },
            {
                "command": "acorn.commands.logout",
                "title": "Logout",
                "category": "Acorn"
            },
            {
                "command": "acornView.refreshExplorer",
                "title": "Acorn Refresh",
                "category": "Acorn Apps View",
                "icon": {
                    "light": "images/light/refresh.svg",
                    "dark": "images/dark/refresh.svg"
                }
            },
            {
                "command": "acornView.openEndpointUrl",
                "title": "Acorn open endpoint URL",
                "category": "Acorn Apps View"
            },
            {
                "command": "acornView.setDefaultProject",
                "title": "Set as Default",
                "category": "Acorn Projects View"
            }
        ],
        "languages": [
            {
                "id": "aml",
                "aliases": [
                    "aml"
                ],
                "extensions": [
                    ".aml"
                ],
                "filenamePatterns": [
                    "Acornfile",
                    "Acornfile.*",
                    "*.acornfile"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "aml",
                "scopeName": "source.aml",
                "path": "./syntaxes/aml.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "aml",
                "path": "./snippets/acornfile.json"
            }
        ],
        "views": {
            "acornView": [
                {
                    "id": "acornApps",
                    "name": "Apps"
                },
                {
                    "id": "acornProjects",
                    "name": "Projects"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "acornApps",
                "contents": "No Acorn Apps are running in this namespace."
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "acornView",
                    "title": "Acorn",
                    "icon": "images/dark/acorn_logo.png"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "acornView.refreshExplorer",
                    "when": "view == acornApps",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "acornView.setDefaultProject",
                    "when": "view == acornProjects",
                    "group": "projects_inline"
                }
            ],
            "commandPalette": [
                {
                    "command": "acornView.refreshExplorer",
                    "when": "view == acornApps"
                },
                {
                    "command": "acornView.openEndpointUrl",
                    "when": "view == acornApps"
                },
                {
                    "command": "acornView.setDefaultProject",
                    "when": "view== acornProjects"
                }
            ]
        }
    },
    "capabilities": {
        "virtualWorkspaces": {
            "supported": false
        },
        "untrustedWorkspaces": {
            "supported": "limited",
            "description": "",
            "restrictedConfigurations": [
                "acorn.commands.runInteractive",
                "acorn.commands.run",
                "acorn.commands.build"
            ]
        }
    },
    "dependencies": {
        "@actions/exec": "^1.1.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.69.0"
    },
    "scripts": {}
}